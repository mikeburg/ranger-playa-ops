#!/bin/bash

workingdir="$(cd "$(dirname "$0")/.." && pwd)";

if [[ $# -eq 0 ]]; then
  echo "Execute a command within a service."
  echo "Usage: $0 {api.1|api.2|client|db|nginx|classic} command-to-run"
  exit 1
fi

name=$1
shift

service="rangers_${name}_1"

if [ -t 0 ]; then
	tty_args="--tty";
else
	tty_args="";
fi


exec docker exec --interactive ${tty_args} --env="${workingdir}/.rangers.env"  "${service}" "$@"
